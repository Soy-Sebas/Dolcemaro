---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import SobreNosotrosItem from "../components/sobreNosotrosItem.astro";
import Constitucion from "../components/constitucionItem.astro";
---

<Layout
    title="Sobre nosotros Dolceamaro"
    description="La mejor página de tu vida"
>
    <Container>
        <SobreNosotrosItem />
        <Constitucion />
        <div class="bg-gradient-to-bl from-[#411b69] to-[#f2e7fe] p-8 md:px-20 md:py-20 mt-20 mb-20 flex flex-col items-center text-center">
            <h2 class="text-white text-4xl md:text-6xl tracking-tight">
                Somos más que una experiencia
            </h2>
            <p class="text-white/70 mt-4 text-lg md:text-xl">
                somos aquellos que cambiarán tu forma de vestir para siempre.
            </p>
            <div class="flex mt-5">
                <a href="Productos" class="rounded-full text-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo px-7 py-2.5 bg-white text-indigo-800 border-2 border-transparent">¡Compra Ahora!</a>
            </div>
        </div>
    </Container>
</Layout>
