---
interface Props {
    title: string
    company: string
    description: string
    link?: string
    date: string
  }
  
  const { title, company, description, link, date } = Astro.props
  ---

  <div
    class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20  before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
  >
    <div class="relative pb-12 md:col-span-2">
      <div class="sticky top-0">
        <span class="text-purple-800 -left-[42px] absolute rounded-full text-5xl"
          >&bull;</span
        >
  
        <h3 class="text-xl font-bold text-purple-800">{title}</h3>
        <h4 class="font-semibold text-xl text-gray-60">{company}</h4>
        <time class="p-0 m-0 text-sm text-gray-600/80">{date}</time>
      </div>
    </div>
    <div class="relative flex flex-col gap-2 pb-4 text-gray-600 md:col-span-3">
      {description}
    </div>
  </div>