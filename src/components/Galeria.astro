---
import "photoswipe/style.css";
---

<div class="grid grid-cols-3 max-w-6xl gap-4 md:gap-8 mx-auto py-20 px-2" id="gallery">
    {
        Array.from({ length: 9 }).map((_, i) => (
            <a
                class="group rounded-xl hover:scale-105 transition-all relative aspect-square"
                href={`/gallery/img-${i + 1}.webp`}
                target="_blank"
                data-cropped="true"
                data-pswp-width="700"
                data-pswp-height="525"
            >
                <img
                    class="rounded-xl aspect-square object-cover"
                    loading="lazy"
                    src={`/gallery/img-${i + 1}-thumb.webp`}
                    alt=""
                />
                <img
                    class="blur-lg absolute inset-0 transition group-hover:constrast-150 opacity-70 -z-10  aspect-square object-cover"
                    loading="lazy"
                    src={`/gallery/img-${i + 1}-thumb.webp`}
                    alt=""
                />
            </a>
        ))
    }
</div>

<script>
    import PhotoSwipeLightbox from "photoswipe/lightbox";
    const lightbox = new PhotoSwipeLightbox({
        gallery: "#gallery",
        children: "a",
        pswpModule: () => import("photoswipe"),
    }); 
    lightbox.init();
</script>
