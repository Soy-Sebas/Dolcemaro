---
import "photoswipe/style.css";
---

<div class="grid grid-cols-3 max-w-6xl gap-8 mx-auto py-20" id="gallery">
    {
        Array.from({ length: 9 }).map((_, i) => (
            <a
                class="group rounded-xl hover:scale-105 transition-all relative"
                href={`/gallery/img-${i + 1}.jpg`}
                target="_blank"
            >
                <img 
                    class="blur-3xl absolute inset-0 transition group-hover:constrast-150 opacity-70 -z-10"
                    loading="lazy"           
                    src={`/gallery/img-${i + 1}.webp`} 
                    alt="" 
                />
                <img 
                    class="rounded-xl"
                    loading="lazy"           
                    src={`/gallery/img-${i + 1}.webp`} 
                    alt="" 
                />
            </a>
        ))
    }
</div>

<script>
    import PhotoSwipeLightbox from "photoswipe/lightbox";
    const lightbox = new PhotoSwipeLightbox({
        gallery: "#gallery",
        children: "a",
        pswpModule: () => import("photoswipe"),
    });
    lightbox.init();
</script>
