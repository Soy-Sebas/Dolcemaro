---
import Header from "../components/elementHeader/Header.astro";
import "@fontsource-variable/onest";

interface Props {
	description: string;
	title: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-Apr.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="fixed left-0 top-0 -z-10 h-full w-full">
			<div
				class="absolute top-0 z-[-2] h-screen w-screen dark:bg-neutral-950"
				style="background-image:linear-gradient(38.73deg, rgba(204, 0, 187, 0.25) 0%, rgba(201, 32, 184, 0) 50%), linear-gradient(141.27deg, rgba(0, 70, 209, 0) 50%, rgba(108, 0, 209, 0.25) 100%)"
			>
			</div>
		</div>
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme:;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		background: white;
		overflow-x: hidden; /* Oculta el desbordamiento horizontal */
	}

	.overflow-image {
		position: relative;
		height: 100vh; /* Ajusta la altura al 100% del viewport */
		transform: translateX(5%);
	}
	.overflow-image img {
		position: absolute;
		top: 0;
		right: 0;
		max-width: 500px;
		transform: translateY(-96%);
	}

	.pwelcome {
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.4;
		margin-bottom: 1em;
		font-weight: 100;
		font-size: 1em;
		letter-spacing: 0.5px;
	}

	.stwelcome {
		color: white;
		font-weight: 700;
	}

	#header-nav {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		padding: 12px;

		backdrop-filter: blur(10px); /* Aplicar desenfoque */
		-webkit-backdrop-filter: blur(
			10px
		); /* Prefijo para navegadores WebKit */
		transition: background-color 0.3s ease; /* Transici√≥n suave */
	}

	.shine-text {
		background-image: linear-gradient(
			-250deg,
			#fff 0%,
			#3d79ff 29%,
			#5489ff 67%,
			#6f9cff 100%
		);
		background-size: 200% auto;
		color: #fff;
		background-clip: text;
		text-fill-color: transparent;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: textclip 6s linear infinite;
	}
	@keyframes textclip {
		to {
			background-position: -200% center;
		}
	}
</style>
